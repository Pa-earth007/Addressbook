<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AddressBook</title>
    <script src="~/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:deepskyblue">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 g-md-3">
                <h1 class="display-3"align="center" style="font-family: Algerian">ADDRESSBOOK</h1>
            </div>
            <div class="col-3 h4 g-md-3">
                
                <div class="list-group ">
                    <a href="~/Users/Index" class="list-group-item list-group-item-action">Home</a>
                    <a href="~/Users/guide" class="list-group-item list-group-item-action">What Is Addressbook?</a>
                    <a href="~/Users/Search" class="list-group-item list-group-item-action">Looking For Place?</a>
                    <a href="~/Users/Aboutus" class="list-group-item list-group-item-action">About Us</a>
                    <a href="~/Users/Login" class="list-group-item list-group-item-action">Logout</a>
                </div>
            </div>
            <div class="col-9   g-md-3">
                @RenderBody()
                <script src="~/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
                <link href="~/bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />
                @RenderSection("scripts", required: false)
            </div>
        </div>
    </div>  
    
</body>
</html>
